<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_short_bg"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        style="@style/TitleBarStyle"
        app:title="@string/video_catalog"
        app:titleSize="@dimen/sp_18"
        app:titleStyle="bold" />

    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/sliding_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        app:tab_deselect_color="@color/color_5D5D5D"
        app:tab_divider_show_mode="SHOW_DIVIDER_MIDDLE"
        app:tab_divider_solid_color="@color/transparent"
        app:tab_divider_width="34dp"
        app:tab_item_is_equ_width="false"
        app:tab_draw_divider="true"
        app:tab_enable_gradient_scale="true"
        app:tab_enable_text_bold="true"
        app:tab_indicator_drawable="@drawable/video_catalog_indicator_bg"
        app:tab_indicator_height="10dp"
        app:tab_indicator_style="STYLE_BOTTOM"
        app:tab_indicator_width="100dp"
        app:tab_max_scale="1.0"
        app:tab_min_scale="0.92"
        app:tab_enable_gradient_text_size="false"
        app:tab_text_min_size="@dimen/sp_18"
        app:tab_text_max_size="@dimen/sp_16"
        app:tab_orientation="HORIZONTAL"
        app:tab_select_color="@color/black"
        app:tab_use_typeface_bold="true">

        <!--<include layout="@layout/tab_video_catalog_item" />

        <include layout="@layout/tab_video_catalog_item" />-->

    </com.angcyo.tablayout.DslTabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:elevation="2dp" />

</LinearLayout>