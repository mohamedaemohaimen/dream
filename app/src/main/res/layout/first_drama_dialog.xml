<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_287"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <com.tt.widget.layout.RatioFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sizeRatio="287:431">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/poster_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:round="16dp"
            tools:src="@drawable/login_bg" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/count_down_ll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_gravity="end"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            tools:shape_radiusInBottomLeft="16dp"
            tools:shape_radiusInTopRight="16dp"
            app:shape_solidColor="@color/color_C640FF_50">

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coming_in"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <com.tt.dramatime.widget.fonttext.MyShapeTextView
                android:id="@+id/day_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="3dp"
                android:gravity="center"
                android:maxWidth="@dimen/dp_20"
                android:minWidth="@dimen/dp_12"
                android:paddingHorizontal="@dimen/dp_2"
                android:text="0"
                android:textSize="@dimen/sp_13"
                app:shape_radius="@dimen/dp_2"
                app:shape_solidColor="@color/white"
                app:shape_textColor="@color/color_C640FF" />

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_3"
                android:text="@string/d"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

            <com.tt.dramatime.widget.fonttext.MyShapeTextView
                android:id="@+id/hour_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:gravity="center"
                android:maxWidth="@dimen/dp_20"
                android:minWidth="@dimen/dp_12"
                android:paddingHorizontal="@dimen/dp_2"
                android:text="0"
                android:textSize="@dimen/sp_13"
                app:shape_radius="@dimen/dp_2"
                app:shape_solidColor="@color/white"
                app:shape_textColor="@color/color_C640FF" />

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_3"
                android:text="@string/h"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

            <com.tt.dramatime.widget.fonttext.MyShapeTextView
                android:id="@+id/minutes_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:gravity="center"
                android:maxWidth="@dimen/dp_20"
                android:minWidth="@dimen/dp_12"
                android:paddingHorizontal="@dimen/dp_2"
                android:text="0"
                android:textSize="@dimen/sp_13"
                app:shape_radius="@dimen/dp_2"
                app:shape_solidColor="@color/white"
                app:shape_textColor="@color/color_C640FF" />

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:text="@string/m"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />
        </com.hjq.shape.layout.ShapeLinearLayout>
    </com.tt.widget.layout.RatioFrameLayout>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/reserve_ll"
        style="@style/Button45TBStyleLR"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/button_big_45_bg"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/first_drama_reminder_ic" />

        <com.tt.dramatime.widget.fonttext.FontTextView
            android:id="@+id/button_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:font_bold="true"
            android:text="@string/remind_me" />
    </com.hjq.shape.layout.ShapeLinearLayout>

    <ImageButton
        android:id="@+id/close_btn"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_34"
        android:background="@drawable/dialog_grey_close" />

</LinearLayout>

