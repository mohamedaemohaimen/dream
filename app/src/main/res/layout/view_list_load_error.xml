<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_error"
    android:visibility="gone"
    tools:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/network_error_ic" />

    <com.tt.dramatime.widget.fonttext.FontTextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:text="@string/text_empty_network_error"
        android:textColor="@color/color_D2D1D5"
        android:textSize="14sp" />

    <com.tt.dramatime.widget.fonttext.FontTextView
        android:id="@+id/operation_btn"
        android:layout_width="99dp"
        android:gravity="center"
        android:text="@string/retry"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:layout_height="38dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/button_middle_38_bg" />
</LinearLayout>