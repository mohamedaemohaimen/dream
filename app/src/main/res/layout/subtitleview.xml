<?xml version="1.0" encoding="utf-8"?>
<com.tt.widget.layout.RatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sub_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:sizeRatio="9:16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/sub_space"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!--android:background="@drawable/shape_black50_bg"-->
        <com.tt.dramatime.widget.subtitleview.SubtitleTextView
            android:id="@+id/subTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/sub_space"
            app:layout_constraintBottom_toBottomOf="@id/sub_space"
            tools:text="the friendliest movie star in the entertainment circle."/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.tt.widget.layout.RatioFrameLayout>