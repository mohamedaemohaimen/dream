<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg"
            app:round="16dp" />

        <FrameLayout
            android:id="@+id/play_fl"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_middle_38_bg">

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:id="@+id/play_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/play_ic"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:paddingHorizontal="19dp"
                android:text="@string/play"
                android:textColor="@color/white"
                android:textDirection="ltr"
                android:textSize="16sp"
                app:font_bold="true" />
        </FrameLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/count_down_ll"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:visibility="gone"
            app:shape_radiusInBottomLeft="16dp"
            app:shape_radiusInTopRight="16dp"
            app:shape_solidColor="@color/color_C640FF_50"
            tools:visibility="visible">

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coming_in"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <com.tt.dramatime.widget.fonttext.MyShapeTextView
                android:id="@+id/day_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="3dp"
                android:gravity="center"
                android:maxWidth="20dp"
                android:minWidth="12dp"
                android:paddingHorizontal="2dp"
                android:textSize="13sp"
                app:shape_radius="2dp"
                app:shape_solidColor="@color/white"
                app:shape_textColor="@color/color_C640FF"
                tools:text="0" />

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:text="@string/d"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <com.tt.dramatime.widget.fonttext.MyShapeTextView
                android:id="@+id/hour_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center"
                android:maxWidth="20dp"
                android:minWidth="12dp"
                android:paddingHorizontal="2dp"
                android:textSize="13sp"
                app:shape_radius="2dp"
                app:shape_solidColor="@color/white"
                app:shape_textColor="@color/color_C640FF"
                tools:text="0" />

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:text="@string/h"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <com.tt.dramatime.widget.fonttext.MyShapeTextView
                android:id="@+id/minutes_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center"
                android:maxWidth="20dp"
                android:minWidth="12dp"
                android:paddingHorizontal="2dp"
                android:textSize="13sp"
                app:shape_radius="2dp"
                app:shape_solidColor="@color/white"
                app:shape_textColor="@color/color_C640FF"
                tools:text="0" />

            <com.tt.dramatime.widget.fonttext.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/m"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </com.hjq.shape.layout.ShapeLinearLayout>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/bannerBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            app:round="16dp"
            tools:visibility="gone" />

    </androidx.cardview.widget.CardView>

</FrameLayout>

